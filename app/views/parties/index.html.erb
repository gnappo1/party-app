<h1>Parties</h1>

<% if @parties.length > 0 %>
    <ul>
        <% @parties.each do |party| %>
            <li><%= link_to party.name, party_path(party) %></li><br>
        <% end %>
    </ul>
<% else %>
    <h4>There are currently no parties, go create one <%= link_to("here", new_party_path) %></h4>
<% end %>